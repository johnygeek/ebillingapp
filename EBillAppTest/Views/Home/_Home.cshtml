@using EBillAppTest.Models
@model EBillAppTest.Models.HomeViewModel
<!-- ko with: home -->
<p><div href="#customer" data-toggle="collapse" role="button" aria-expanded="false" class="font">Customer</div></p>
<div id="customer" class="collapse">
    <div class="row">
        <div class="col-md-10">
            <label for="txtFName" class="font">First Name</label>
            <input id="txtFName" class="form-control" type="text" data-bind="value: firstName" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-10">
            <label for="txtLName" class="font">Last Name</label>
            <input id="txtLName" class="form-control" type="text" data-bind="value: lastName" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-10">
            <label for="txtMobNumber" class="font">Mobile Number</label>
            <input id="txtMobNumber" class="form-control" type="tel" data-bind="value: mobileNumber, event:{keypress: getCustomer}" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-10">
            <label for="txtEmail" class="font">Email Address</label>
            <input id="txtEmail" class="form-control" type="email" data-bind="value: email, event:{keypress: getCustomer}" />
        </div>
    </div>
</div>
<p><div href="#categories" data-toggle="collapse" role="button" aria-expanded="false" class="font">Categories</div></p>
<div id="categories" class="collapse">
    @foreach (var category in Model.Categories)
    {
        <h4 class="font">@category.Name</h4>
        foreach (var item in category.Items)
        {
            <div class="row" style="padding-left:10px;">
                <div class="col-md-10">
                    <span class="font">@item.Name</span>
                    <div style="padding-right:560px;float:right;" class="font">
                        <span>
                            <input name="@item.Name" type="radio" id="@string.Concat(item.Id,"_",(int)ItemType.Small)"><label for="@string.Concat(item.Id,"_",ItemType.Small)">Small</label>
                            &nbsp;&nbsp;<input name="@item.Name" type="radio" id="@string.Concat(item.Id,"_",(int)ItemType.Large)"><label for="@string.Concat(item.Id,"_",ItemType.Small)">Large</label>
                            <input type="number" id="qty" placeholder="Quantity" style="width: 80px;"/>
                        </span>
                    </div>
                </div>
            </div>
        }
    }
</div>
<div class="btn-group">
    <button type="button" class="btn btn-default font" data-bind="click: save">Generate Order</button>
</div>
<!-- /ko -->
